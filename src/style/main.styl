@font-face 
    font-family ColtherBold 
    font-style normal
    src url(../fonts/TRY_Clother-Bold.ttf)

@font-face 
    font-family ColtherRegular 
    font-style normal
    src url(../fonts/TRY_Clother-Regular.ttf)

@font-face 
    font-family ColtherLight 
    font-style normal
    src url(../fonts/TRY_Clother-Light.ttf)

html
body
    margin 0
    padding 0
    width 100%
    height 100%
    overflow hidden
    font-family ColtherRegular
    background #000
    scroll-behavior smooth

canvas
    width 100%
    z-index 5

.loader
    display flex
    width 100vw
    height 100vh
    color white
    flex-direction column
    justify-content center
    align-items center
    span
        padding 5% 0
        font-size 2em
    .loader__bar
        width 60%
        height 1%
        background #fff
        animation loadAnimation 5s
        transform-origin 0.0

header
    display none
    width 100vw
    position fixed
    border-bottom 1px solid #fff
    background #000
    z-index: 10
    nav
        width 90%
        margin 0 auto
        // padding 0 5%
        display flex
        justify-content space-between
        align-items center
        font-family ColtherRegular
        color #FFF
        a
            color #fff
            text-decoration none
        button
            position relative
            -webkit-appearance none
            background none
            font-size 1em
            border none
            color #fff
            cursor pointer
            &:hover:after
                content ' '
                position absolute
                width 120%
                height .2vw
                top 100%
                left -10%
                background #fff
                animation underlineAnimation .5s
        h1
            font-family ColtherBold
            span
                font-family ColtherBold
                color #000000
                -webkit-text-stroke 1px #fff
        ul
            display flex
            justify-content space-between
            align-items center
            list-style none
            li
                padding 20px
                &:nth-child(4)
                    padding-right 0

main
    display block
    z-index 1
    section
        width 100vw
        height 100vh

.projects
    display none
article 
    width 100vw
    height 100vh
    display flex
    align-items center
    justify-content center
    color #fff
    background #000
    .projects__content
        width 90%
        display flex
        align-items center
        justify-content space-between
        .content__left
            width 70%
            display flex
            align-items center
            img
                width 100%
                height 100%
        .content__bar
            width .5%
            height 50vh
            background #fff
            margin 0 5%
        .content__right
            width 70%
            display flex
            flex-direction column
            justify-content space-between
            h1
                margin-top 0
                margin-bottom 1%
                font-family ColtherBold
                font-size 2em
            small
                margin-bottom 2%
                font-family ColtherLight
            p
                font-family ColtherRegular
            a
                width max-content
                color #fff
                text-decoration none
                padding 15px
                border 1px solid #fff
                transition .3s
                &:hover
                    background #fff
                    color #000

.contact
    display none
    // display flex
    align-items center
    justify-content center
    color #fff
    .contact__content
        width 90%
        display flex
        // justify-content space-between
        margin-top 5%
        .content__left
            width 100%
            padding-right 5%
            p
                margin-block-start auto
        .content__right
            width 100%
            padding-left 5%
            input
                width -webkit-fill-available
                padding 2%
                font-size 1em
                background #000
                border 1px solid #fff
                color #fff
                &:focus
                    outline none
            textarea
                width -webkit-fill-available
                padding 2%
                font-size 1em
                background #000
                border 1px solid #fff
                color #fff
                resize none
                &:focus
                    outline none
            button
                width 100%
                padding 2%
                margin-top 5%
                font-size 1em
                color #000
                background #fff
                text-transform uppercase
                transition .5s
                -webkit-appearance none
                cursor pointer
                &:hover
                    background #000
                    color #fff
                    transition .5s
            h2
                margin-bottom 2%
                &:nth-child(1)
                    margin-block-start auto




.active
    display block
    animation opacity 3s

@keyframes opacity {
    from {transform: translateX(-100vw)}
    to {transform: translateX(0)}
    }

@keyframes underlineAnimation{
    from {transform: scaleX(0)}
    to {transform: scaleX(1)}
    }

@keyframes loadAnimation{
    0% {transform: scaleX(0)}
    60% {transform: scaleX(.3)}
    90% {transform: scaleX(.35)}
    100% {transform: scaleX(1)}
    }